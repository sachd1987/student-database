#include <iostream.h>
using namespace std;

struct student name
{
    char name[50];
    int roll numbers;
    float marks;
};

int main() 
{ //enter imformation about students
    student s;
    cout << "Enter information," << endl;
    cout << "Enter student name: ";
    cin >> s.name;
    cout << "Enter roll number: ";
    cin >> s.roll;
    cout << "Enter marks: ";
    cin >> s.marks;

    cout << "\nDisplaying Information," << endl;
    cout << "Name: " << s.name << endl;
    cout << "Roll: " << s.roll << endl;
    cout << "Marks: " << s.marks << endl;
    return 0;
}

